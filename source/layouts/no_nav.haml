    %header
      = # partial "navigation"
    %div{:role => "main", :class => "main"}
      = yield
    %footer

    #js_css_data
    
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"}
    :javascript
      window.jQuery || document.write('<script src="javascripts/vendor/jquery-1.7.1.min.js"><\/script>')
